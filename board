
import itertools

def draw_board(board):
    for i in range(2):
        board = list(itertools.chain.from_iterable(board))
    print("---------------------------------")
    for i in range(8):
        print("|", board[0 + i * 8], "|", board[1 + i * 8], "|", board[2 + i * 8],\
             "|", board[3 + i * 8], "|", board[4 + i * 8],"|", board[5 + i * 8],"|",\
                  board[6 + i * 8],"|", board[7 + i * 8], "|")
        print("---------------------------------")
